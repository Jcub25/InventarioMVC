@model IEnumerable<InventarioMVC.Models.Producto>

<h2>Productos</h2>

<form method="get" class="mb-3">

    <label for="estadoFiltro">Estado:</label>
    <select name="estado" id="estadoFiltro" class="form-control" style="width:200px; display:inline-block">
        <option value="">Todos</option>
        <option value="activos" selected="@(Context.Request.Query["estado"] == "activos")">Activos</option>
        <option value="inactivos" selected="@(Context.Request.Query["estado"] == "inactivos")">Inactivos</option>
    </select>

    <input type="text"
           name="buscar"
           placeholder="Buscar producto..."
           value="@(Context.Request.Query["buscar"])"
           class="form-control"
           style="width:250px; display:inline-block; margin-left:10px;" />

    <button type="submit" class="btn btn-primary">Filtrar</button>
</form>

<p>
    <a asp-action="Create">Nuevo Producto</a> |
    <a asp-action="Estadisticas">Ver Estadísticas</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Stock</th>
            <th>Activo</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nombre</td>
                <td>@item.Precio</td>
                <td>@item.Stock</td>
                <td>@(item.Activo ? "Sí" : "No")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ProductoId">Editar</a> |
                    <a asp-action="Delete" asp-route-id="@item.ProductoId">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
