@model InventarioMVC.Models.Producto

<h2>Editar Producto</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="ProductoId" />

    <div>
        <label>Nombre</label>
        <input asp-for="Nombre" />
    </div>
    <div>
        <label>Precio</label>
        <input asp-for="Precio" />
    </div>
    <div>
        <label>Stock</label>
        <input asp-for="Stock" />
    </div>
    <div class="form-group form-check">
        <input class="form-check-input" type="checkbox" asp-for="Activo" />
        <label class="form-check-label" asp-for="Activo">Activo</label>
    </div>

    <button type="submit">Guardar Cambios</button>
</form>
